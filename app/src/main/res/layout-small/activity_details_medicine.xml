<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D78DB"
        tools:context=".Activities.DetailsMedicineActivity">


        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="472dp"
            android:layout_height="1180dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomeProduto"
            app:srcCompat="@drawable/layout_photo"
            autofit:layout_constraintHorizontal_bias="0.506" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="71dp"
            android:layout_height="59dp"
            android:layout_marginStart="163dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="163dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/medicine_for_details" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/nomeProduto"
        android:layout_width="353dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/oswald_medium"
        android:text="Cloreto de potássio"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView14"
        autofit:minTextSize="8sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="1100dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:orientation="vertical"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toTopOf="@+id/imageView11">

            <TextView
                android:id="@+id/classeTerapeuticaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo_chettan"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="Classe terapêutica:"
                android:textColor="#B00027FF"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView11"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/classeTerapeutica"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/aldrich"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textColor="#020000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/principioAtivoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo_chettan"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="Princípio Ativo:"
                android:textColor="#B00027FF"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/classeTerapeutica"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/principioAtivo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/aldrich"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textColor="#020000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/razaoSocialText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo_chettan"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="Empresa - Razão Social:"
                android:textColor="#B00027FF"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/principioAtivo"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/razaoSocial"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/aldrich"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textColor="#020000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fabricanteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo_chettan"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="Uso:"
                android:textColor="#B00027FF"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/razaoSocial"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/fabricante"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/aldrich"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textColor="#020000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/conservacaoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo_chettan"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="Conservação:"
                android:textColor="#B00027FF"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fabricante"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/conservacao"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/aldrich"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textColor="#020000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/destinacaoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo_chettan"
                android:gravity="center_vertical"
                android:textColor="#B00027FF"
                android:paddingStart="16dp"
                android:text="Destinação:"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/conservacao"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/destiny"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/aldrich"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textColor="#020000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prescricaoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo_chettan"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="Prescrição:"
                android:textColor="#B00027FF"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/destiny"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/prescricao"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/aldrich"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textColor="#020000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>