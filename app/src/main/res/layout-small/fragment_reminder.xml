<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0D78DB"
        tools:context=".Fragments.ReminderFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:src="@drawable/despertador" />

            <TextView
                android:id="@+id/all_you_reminders"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/aldrich"
                android:gravity="center"
                android:text="Todos seus lembretes"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="500dp"
            android:layout_height="800dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@drawable/layout_photo" />

        <LinearLayout
            android:id="@+id/linearAddMedicine"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconAddMedicine"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@drawable/addmedicine" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAddMedicine"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/shape_buttons"
                android:fontFamily="@font/baloo_chettan"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Adicionar tratamento"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:layout_marginTop="230dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleReminder"
                android:layout_width="match_parent"
                android:layout_height="500dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonHelp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_button_delete"
                android:fontFamily="@font/baloo_chettan"
                android:text="@string/need_you_help"
                android:textColor="#FFFFFF" />
        </LinearLayout>


    </FrameLayout>


</ScrollView>