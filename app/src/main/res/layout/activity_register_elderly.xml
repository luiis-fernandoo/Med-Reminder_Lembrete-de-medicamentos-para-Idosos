<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterElderlyActivity">

    <ImageView
        android:id="@+id/imageElderly"
        android:layout_width="174dp"
        android:layout_height="159dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/profile"
        app:layout_constraintBottom_toTopOf="@+id/nameRegisterElderly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <EditText
        android:id="@+id/nameRegisterElderly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:hint="Nome do idoso"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/ageRegisterElderly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ageRegisterElderly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Idade do idoso"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/laterElderly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonRegisterElderly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="170dp"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/laterElderly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="169dp"
        android:layout_marginBottom="102dp"
        android:text="Cadastrar mais tarde"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegisterElderly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>