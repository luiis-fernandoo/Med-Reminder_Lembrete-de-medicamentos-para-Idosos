<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activities.TypeMedicineActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="237dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/captura_de_tela_2024_03_18_152732"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-3dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/howFrequency"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/baloo_chettan"
                android:text="@string/Choose_the_pharmaceutical_type_of_your_medicine"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#B00027FF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonPill"
                android:layout_width="315dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_type_medicine"
                android:fontFamily="@font/baloo_chettan"
                android:text="@string/pill"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/howFrequency"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDrops"
                android:layout_width="315dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_type_medicine"
                android:fontFamily="@font/baloo_chettan"
                android:text="@string/drops"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="566dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDust"
                android:layout_width="315dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_type_medicine"
                android:fontFamily="@font/baloo_chettan"
                android:text="@string/dust"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="470dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonHelp"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/shape_button_delete"
                android:fontFamily="@font/baloo_chettan"
                android:text="@string/need_you_help"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>