<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0D78DB"
        tools:context=".Fragments.HomeFragment">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="500dp"
            android:layout_height="700dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:src="@drawable/layout_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@drawable/icons8_emoji_de_calend_rio_48" />

            <TextView
                android:id="@+id/currentDay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/aldrich"
                android:gravity="center"
                android:text="Domingo, 01 de Abril"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconAddMedicine"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@drawable/addmedicine" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAddMedicine"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:background="@drawable/shape_buttons"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:fontFamily="@font/baloo_chettan"
                android:text="Adicionar tratamento"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonHelp"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/shape_button_delete"
            android:fontFamily="@font/baloo_chettan"
            android:text="@string/need_you_help"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />


    </FrameLayout>
</ScrollView>