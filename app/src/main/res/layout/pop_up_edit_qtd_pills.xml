<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quantityReminderEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/baloo_chettan"
            android:text="@string/remaining_pills"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/remainingInput"
            android:layout_width="66dp"
            android:layout_height="36dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_list"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#750D78DB" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/warningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/baloo_chettan"
            android:text="@string/quantity_for_notice"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/warningInput"
            android:layout_width="74dp"
            android:layout_height="36dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_list"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#750D78DB" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_ok"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_button_confirm"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTint="#FFFFFF"
            android:fontFamily="sans-serif-black"
            android:text="Salvar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>